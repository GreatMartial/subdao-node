# build subdao-node
FROM paritytech/ci-linux:production as builder

LABEL maintainer="subdao-dev"
ARG RUST_VERSION=nightly-2020-10-06
ARG PROFILE=debug
ARG GIT_REPO="https://github.com/remote-freeman/subdao-node.git"
ARG GIT_BRANCH="master"

RUN git clone --recursive ${GIT_REPO}
WORKDIR /builds/subdao-node
#RUN sed -i s/localhost/subdao-data-proxy/g /builds/subdao-node/pallets/subdao-ocw/src/lib.rs
#RUN sed -i s/localhost/subdao-node/g /builds/subdao-node/scripts/insert_alice_key.sh
RUN rustup default stable
RUN rustup uninstall nightly
RUN rustup toolchain install ${RUST_VERSION}
RUN rustup target add wasm32-unknown-unknown --toolchain ${RUST_VERSION}

RUN cargo build
RUN cp target/${PROFILE}/subdao-node /subdao-node

